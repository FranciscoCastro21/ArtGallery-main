<div class="container mt-5">
  <!-- Heading -->
  <h1 class="text-center mb-4 display-5 fw-bold text-dark">Login</h1>

  <!-- Error/Info Messages -->
  {{#if messages}}
    <div class="alert alert-danger text-center">
      Invalid credentials
    </div>
  {{else}}
    <div class="alert alert-info text-center">
      Please enter your credentials
    </div>
  {{/if}}

  <!-- Login Form -->
  <form method="post" class="mx-auto" style="max-width: 500px;">
    <!-- Username field -->
    <fieldset class="form-group mb-3">
      <label for="username" class="form-label">Username: *</label>
      <input
        name="username"
        id="username"
        class="form-control"
        required
        placeholder="Enter your email or username"
      />
    </fieldset>

    <!-- Password field -->
    <fieldset class="form-group mb-3">
      <label for="password" class="form-label">Password: *</label>
      <input
        name="password"
        id="password"
        type="password"
        class="form-control"
        required
        placeholder="Enter your password"
      />
    </fieldset>

    <!-- Submit button -->
    <div class="text-center">
      <button class="btn btn-dark w-100 mb-3" type="submit">Login</button>
    </div>

    <!-- Social Login buttons -->
    <div class="d-grid gap-3">
       <a class="btn btn-primary d-flex align-items-center justify-content-center" href="/Facebook">
    <img src="/assets/facebook.png" alt="Facebook Icon" style="width: 20px; height: 20px;" class="me-2">
    Login with Facebook
  </a>
       <a class="btn btn-secondary d-flex align-items-center justify-content-center" href="/Github">
    <img src="/assets/github.png" alt="Github Icon" style="width: 20px; height: 20px;" class="me-2">
    Login with Github
  </a>
    </div>
  </form>

  <!-- Registration link -->
  <hr class="my-4" />
  <p class="text-center">
    Need an account? <a href="/register" class="text-decoration-none">Register</a>
  </p>
</div>

<!-- Font Awesome for Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
